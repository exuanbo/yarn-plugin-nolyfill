{
  "name": "yarn-plugin-nolyfill",
  "version": "1.0.0",
  "description": "Yarn Berry plugin that replaces unnecessary polyfills with native implementations.",
  "type": "module",
  "sideEffects": false,
  "main": "./src/index.ts",
  "private": true,
  "scripts": {
    "build": "builder build plugin",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "postinstall": "husky",
    "prepack": "yarn clean && yarn build",
    "prettier": "prettier --check . --cache",
    "test": "yarn lint && yarn tsc && yarn prettier",
    "tsc": "tsc"
  },
  "keywords": [
    "yarn",
    "berry",
    "plugin",
    "nolyfill"
  ],
  "author": {
    "name": "Wojciech Maj",
    "email": "kontakt@wojtekmaj.pl"
  },
  "license": "MIT",
  "dependencies": {
    "@yarnpkg/core": "^4.0.0"
  },
  "devDependencies": {
    "@yarnpkg/builder": "^4.0.0",
    "eslint": "^8.56.0",
    "eslint-config-wojtekmaj": "^0.11.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.2.0",
    "rimraf": "^3.0.0",
    "typescript": "^5.4.2"
  },
  "resolutions": {
    "eslint-plugin-import": "npm:eslint-plugin-i@^2.28.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wojtekmaj/yarn-plugin-nolyfill.git"
  },
  "funding": "https://github.com/wojtekmaj/yarn-plugin-nolyfill?sponsor=1",
  "packageManager": "yarn@4.1.1"
}
